{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Target ES2023 for Node 20+ in Docker (native features, no transpilation)
    "target": "ES2023",
    "module": "NodeNext",
    "lib": ["ES2023"],
    "moduleResolution": "NodeNext",

    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,

    "useDefineForClassFields": true,
    "allowJs": false,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "tests"]
}
