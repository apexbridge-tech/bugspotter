{
  "name": "@bugspotter/api",
  "version": "0.1.0",
  "description": "BugSpotter API server with Supabase integration",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:contract": "vitest run tests/contract",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": ["bugspotter", "api", "bug-tracking"],
  "author": "ApexBridge",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@bugspotter/types": "workspace:*",
    "@supabase/supabase-js": "^2.58.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.19",
    "@vitest/coverage-v8": "^3.2.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
