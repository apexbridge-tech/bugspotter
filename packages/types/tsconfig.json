{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Declaration-only output (no runtime code)
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": true,

    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
